<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EnergyQuota</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/admin.css" />
    <link rel="stylesheet" href="/css/modal.css" />
  </head>
  <body>
    <div class="d-flex" id="wrapper">
      <%- include("partials/sidebar_owner") %>
      <!-- Page Content -->
      <div id="page-content-wrapper">
        <%- include("partials/header_owner") %>
        <!-- page contents -->
        <div class="container">
          <nav
            style="--bs-breadcrumb-divider: '>'"
            class="pt-3"
            aria-label="breadcrumb"
          >
            <ol class="breadcrumb">
              <li class="breadcrumb-item active" aria-current="page">
                Tenants
              </li>
            </ol>
          </nav>
          <h4 class="text-center mt-2">Manage your tenants</h4>
          <a href="/tenants/register" class="btn btn-outline-success m-2"
            >Add new</a
          >
          <div class="table-responsive">
            <% if (tenants.length === 0) { %>
            <div class="text-center p-3">
              <p>No tenants registered</p>
            </div>
            <% } else { %>
            <table
              class="table table-bordered table-striped table-success hover"
            >
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone number</th>
                  <th>House number</th>
                  <th>Action</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% tenants.forEach(tenant => { %>
                <tr>
                  <td><%= tenant.name %></td>
                  <td><%= tenant.email %></td>
                  <td><%= tenant.phone_number %></td>
                  <td><%= tenant.house_number %></td>
                  <td>
                    <a
                      href="/tenants/edit/<%= tenant._id %>"
                      class="btn btn-primary"
                      >Edit</a
                    >
                  </td>
                  <td>
                    <!-- Delete button with data-toggle and data-target attributes -->
                    <button
                      class="deleteBtn btn btn-danger"
                      data-toggle="modal"
                      data-target="#myModal"
                      data-user-id="<%= tenant._id %>"
                    >
                      Delete
                    </button>

                    <!-- The modal -->
                    <div id="myModal" class="modal">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h4 class="modal-title">Delete Tenant</h4>
                        </div>
                        <div class="modal-body">
                          <p>Are you sure you want to delete this tenant?</p>
                        </div>
                        <div class="modal-footer">
                          <button class="btn btn-primary" id="cancelBtn">
                            Cancel
                          </button>
                          <button class="btn btn-danger" id="confirmBtn">
                            Confirm
                          </button>
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
            <div class="text-end">
              <a class="btn btn-primary" href="/tenants/download_tenants"
                >Download(pdf)</a
              >
            </div>
            <%}%>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/modal_delete.js"></script>
    <script src="/js/index.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
